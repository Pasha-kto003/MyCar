<Window x:Class="MyCar.Desktop.Windows.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCar.Desktop.Windows"
        mc:Ignorable="d"
        Title="EditUser" Height="500" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Border BorderThickness="3" BorderBrush="{StaticResource ValorantRedBrush}" Background="WhiteSmoke"
                Panel.ZIndex="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>

                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Логин:" Grid.Row="0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding UserName}" Grid.Row="0" Width="300" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center"/>

                <Label Content="Email:" Grid.Row="1" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding Email}" Grid.Row="1" Width="300" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="2" Margin="0 10 0 0">
                    <Rectangle HorizontalAlignment="Stretch"  Fill="Gray" Height="0.5" Width="370"/>
                    <Label Content="Паспорт" FontFamily="{StaticResource CenturyGothicBold}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>

                <Label Content="Имя:" Grid.Row="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding Passport.FirstName}" Grid.Row="3" Width="300" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center"/>

                <Label Content="Фамилия:" Grid.Row="4" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding Passport.LastName}" Grid.Row="4" Width="300" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center"/>

                <Label Content="Отчество:" Grid.Row="5" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding Passport.Patronimyc}" Grid.Row="5" Width="300" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center"/>

                <Grid  Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Label Content="Серия:"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding Passport.Seria}"  Width="100" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="21 0 10 0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Label Content="Номер:"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBox Style="{StaticResource ModernTextBox}" DataContext="{Binding EditUser}" Text="{Binding Passport.Number}"  Width="100" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="20 0 10 0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                <Label Content="Дата выдачи:" Grid.Row="7" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <DatePicker DataContext="{Binding EditUser}" Width="200" HorizontalAlignment="Right"  Grid.Row="7" FontSize="16" Height="35"  Margin="0 0 10 0" VerticalAlignment="Center"
                         SelectedDate="{Binding Passport.DateStart, StringFormat='{}{0:dd.MM.yyyy}'}" IsTodayHighlighted="False" CalendarStyle="{DynamicResource DatepickerCalendarStyle}" 
                         />
                <Label Content="Тип пользователя:" Grid.Row="8" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <ComboBox Style="{StaticResource ComboBoxFlatStyle}" DisplayMemberPath="TypeName" SelectedItem="{Binding SelectedUserType}" ItemsSource="{Binding UserTypes}" Grid.Row="8" Width="200" Height="35" FontSize="16" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center"/>
                <Button Content="Отмена" Command="{Binding Cancel}" Grid.Row="10" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom"  FontFamily="Century Gothic" Foreground="Red"
                    Background="Transparent" BorderBrush="Red" FontSize="16"/>
                <Button Content="Сохранить" Command="{Binding Save}" Grid.Row="10" Height="30" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontFamily="Century Gothic" Foreground="Green"
                    Background="Transparent" BorderBrush="Green" FontSize="16"/>

            </Grid>
        </Grid>
    </Border>
</Window>
